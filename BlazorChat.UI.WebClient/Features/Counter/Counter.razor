@page "/counter"
@inherits ReactiveUI.Blazor.ReactiveComponentBase<BlazorChat.UI.Shared.Features.Counter.CounterViewModel>

<h1>Counter</h1>

<p>Current count: @ViewModel?.CurrentCount</p>

<button class="btn btn-primary" @onclick="() => ViewModel?.IncrementCommand.Execute().Subscribe()">Click me</button>
